<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/abs__ab_bottom_solid_light_holo"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/tab_location"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_host_spec_sector"
            android:onClick="navigateToLocation"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_tab_location_selector" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_card"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_host_spec_sector"
            android:onClick="navigateToCardInfo"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_tab_card_selector" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_station"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_host_spec_sector"
            android:onClick="navigateToStationLines"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_tab_station_selector" >
            </ImageView>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/tab_transfer"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_host_spec_sector"
            android:onClick="navigateToTransfer"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_tab_station_selector" >
            </ImageView>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/tab_bus_line"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_host_spec_sector"
            android:onClick="navigateToBusLine"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_tab_card_selector" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.telepathic.finder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="8">
    </uses-sdk>

     <uses-permission android:name="android.permission.INTERNET" />
     <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
     <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
     <uses-permission android:name="android.permission.READ_PHONE_STATE" />
     <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
     <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
     <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

     <supports-screens
        android:largeScreens="true"
        android:normalScreens="false"
        android:smallScreens="true"
        android:resizeable="true"
        android:anyDensity="true"/>

    <application android:name=".app.FinderApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity  android:name=".app.SplashActivity" 
            android:theme="@android:style/Theme.NoTitleBar" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".app.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>

       <activity android:name=".app.BusLocationActivity"
            android:label="@string/bus_location"
            android:screenOrientation="sensor"
            android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity android:name=".app.TestActivity"
            android:label="@string/test_activity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|keyboardHidden">
        </activity>

    </application>

</manifest>
